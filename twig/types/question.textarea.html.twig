{% extends "layout/question.main.html.twig" %}

{% block content %}
	{%- set type = type|default("input") -%}

	<ul class="list-group list-group-striped">
		{%- for answer in question.answers -%}
			<li class="list-group-item">
				<div class="{{ type }}">
					<label for="id_{{ answer.form.name }}">{{ answer.form.label }}</label>
					<textarea class="form-control" rows="3" name="{{ answer.form.name }}" id="id_{{ answer.form.name }}" data-label="{{ answer.form.label }}"
						{%- if answer.form.required == true %} required="required"{% endif %}>
						{%- if answer.form.value %}{{ answer.form.value }}{% endif -%}
					</textarea>
				</div>
			</li>
		{%- endfor -%}
	</ul>
{% endblock %}

{% extends "layout/question.main.html.twig" %}

{% block content %}
	{%- set type = type|default("checkbox") -%}

	<ul class="list-group list-group-striped">
		{%- for anwser in question.anwsers -%}
			<li class="list-group-item">
				<div class="{{ type }}">
					<label>
						<input type="{{ type }}" data-label="{{ anwser.form.label }}" name="{{ anwser.form.name }}"{% if anwser.form.checked %} checked="checked"{% endif %}{% if anwser.form.value %} value="{{ anwser.form.value }}"{% endif %}> {{ anwser.form.label }}
					</label>
				</div>
				{%- if anwser.other -%}
					<div class="other form-group hide">
						<label for="id_{{ anwser.other.form.name }}">{{ anwser.other.form.label }}</label>
						<input type="text" class="form-control" name="{{ anwser.other.form.name }}" id="id_{{ anwser.other.form.name }}">
					</div>
				{%- endif -%}
			</li>
		{%- endfor -%}
	</ul>
{% endblock %}

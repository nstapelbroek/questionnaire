{% extends "layout/question.main.html.twig" %}

{% block content %}
	<ul class="list-group list-group-striped">
		{%- for anwser in question.anwsers -%}
			<li class="list-group-item">
				<div class="{{ type }}">
					<label for="id_{{ anwser.form.name }}" class="col-sm-8">{{ anwser.form.label }}</label>
					{# <input class="form-control" id="id_{{ anwser.form.name }}" type="{{ type }}" data-label="{{ anwser.form.label }}" name="{{ anwser.form.name }}"{% if anwser.form.value %} value="{{ anwser.form.value }}"{% endif %}> #}
					<div class="col-sm-4">
						<select class="form-control" name="{{ anwser.form.name }}" id="id_{{ anwser.form.name }}">
							<option>{{ anwser.form.defaultOption }}</option>
							{%- for option in anwser.form.options -%}
								<option value="{{ option.value }}">{{ option.title }}</option>
							{%- endfor -%}
						</select>
					</div>
				</div>
			</li>
		{%- endfor -%}
	</ul>
{% endblock %}
